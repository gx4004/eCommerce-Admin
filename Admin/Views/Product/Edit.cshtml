@model string

@{
ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>
<form method="post" action="/Product/Edit/@Model">
    <div class="form-group">
        <label for="Product">Product Name:</label>
        <input type="text" class="form-control" id="Product" name="Product" value="@Model" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
