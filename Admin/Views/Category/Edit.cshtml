@model string

@{
ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>
<form method="post" action="/Category/Edit/@Model">
    <div class="form-group">
        <label for="Category">Category Name:</label>
        <input type="text" class="form-control" id="Category" name="Category" value="@Model" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
