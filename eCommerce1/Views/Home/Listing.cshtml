@{
ViewData["Title"] = "Product Listing";
}

<h1 class="my-4">Our Products</h1>
<div class="row">
    @for (var i = 1; i <= 6; i++)
    {
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <img class="card-img-top" src="https://via.placeholder.com/700x400" alt="Product Image">
            <div class="card-body">
                <h4 class="card-title">
                    <a href="/Home/ProductDetail/@i">Product @i</a>
                </h4>
                <h5>$24.99</h5>
                <p class="card-text">This is a sample description for product @i.</p>
            </div>
            <div class="card-footer">
                <small class="text-muted">★ ★ ★ ★ ☆</small>
            </div>
        </div>
    </div>
    }
</div>
