@model eCommerce1.Models.Cart

<h1>Your Cart</h1>
<table class="table">
    <thead>
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Quantity</td>
            <td>$@item.Product.Price</td>
        </tr>
    }
    </tbody>
</table>

<h3>Total: $@Model.TotalAmount</h3>