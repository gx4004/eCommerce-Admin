@{
ViewData["Title"] = "My Orders";
}

<h2 class="my-4">Your Orders</h2>
<table class="table table-bordered">
    <thead class="thead-dark">
    <tr>
        <th>Order ID</th>
        <th>Product</th>
        <th>Quantity</th>
        <th>Total Price</th>
    </tr>
    </thead>
    <tbody>
    @for (var i = 1; i <= 5; i++)
    {
    <tr>
        <td>#ORD00@i</td>
        <td>Sample Product @i</td>
        <td>2</td>
        <td>$49.98</td>
    </tr>
    }
    </tbody>
</table>
