@{
ViewData["Title"] = "My Products";
}

<h2 class="my-4">Your Products</h2>
<table class="table table-bordered">
    <thead class="thead-dark">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    @for (var i = 1; i <= 5; i++)
    {
    <tr>
        <td>#PROD00@i</td>
        <td>Sample Product @i</td>
        <td>$19.99</td>
        <td><a href="/Product/Edit/@i" class="btn btn-warning">Edit</a></td>
        <td><a href="/Product/Delete/@i" class="btn btn-danger">Delete</a></td>
    </tr>
    }
    </tbody>
</table>
<a href="/Product/Create" class="btn btn-primary">Add New Product</a>
