@model eCommerce1.Models.Product

<h1>Create New Product</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Product Name</label>
        <input type="text" asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="text" asp-for="Price" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="stockQuantity">Stock Quantity</label>
        <input type="number" asp-for="StockQuantity" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <input type="text" asp-for="Category" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image URL</label>
        <input type="text" asp-for="ImageUrl" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Create Product</button>
</form>